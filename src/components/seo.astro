---
import siteConfig from "@/config/site_config.json";

type Twitter = {
	card: "summary" | "summary_large_image" | "app" | "player";
	title?: string;
	description?: string;
	image?: OpenGraphImage;
	site?: string;
};

type OpenGraphImage = {
	url: string;
	width: number;
	height: number;
	alt: string;
	type: "image/jpeg" | "image/png" | "image/webp" | "image/gif";
};

type OpenGraph = {
	title?: string;
	description?: string;
	image?: OpenGraphImage;
	url?: string;
};

export type Props = {
	title?: string;
	description?: string;
	og?: OpenGraph;
	twitter?: Twitter;
	canonicalUrl: string;
};

let { title, description, og, twitter, canonicalUrl } = Astro.props;

if (!title) {
	title = siteConfig.title;
}

if (!description) {
	description = siteConfig.description;
}
---

<link rel="canonical" href={canonicalUrl} />
<title>{title}</title>
<meta name="description" content={description} />
<meta property="og:title" content={og?.title || title} />
<meta property="og:description" content={og?.description || description} />
<meta property="og:url" content={og?.url || canonicalUrl} />
<meta name="twitter:title" content={twitter?.title || title} />
<meta
	name="twitter:description"
	content={twitter?.description || description}
/>
{
	og?.image ? (
		<>
			<meta property="og:image" content={og.image.url} />
			<meta
				property="og:image:width"
				content={og.image.width.toString()}
			/>
			<meta
				property="og:image:height"
				content={og.image.height.toString()}
			/>
			<meta property="og:image:alt" content={og.image.alt} />
			<meta property="og:image:type" content={og.image.type} />
		</>
	) : null
}
{
	twitter?.image ? (
		<>
			<meta name="twitter:image" content={twitter.image.url} />
			<meta
				name="twitter:image:width"
				content={twitter.image.width.toString()}
			/>
			<meta
				name="twitter:image:height"
				content={twitter.image.height.toString()}
			/>
			<meta name="twitter:image:alt" content={twitter.image.alt} />
			<meta name="twitter:image:type" content={twitter.image.type} />
		</>
	) : null
}
